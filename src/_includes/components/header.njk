<header class="w-full py-2 bg-opacity-50 border-b border-opacity-25 shadow-sm bg-brown-100 border-amber-900 h-14" x-data="{mobileMenuVisible: false}">
  <!-- Max Width Container for the logo, nav and CTA -->
  <div class="relative z-10 flex items-center justify-between w-full h-full max-w-screen-xl px-4 mx-auto">

    <!-- Page Logo -->
    <a href="/" class="h-full" aria-label="Startseite">
      <img src="/assets/meta/logo-virnich-schreinerei.svg" width="96" height="39" alt="Logo {{copmany.name}}" class="w-24 h-full text-white "/>
    </a>

    <!-- Navigation for Tablet and Up-->
    <nav class="hidden space-x-6 lg:flex lg:items-center">
      <!-- Link Items -->
      {# <span class="text-sm font-bold text-amber-700">Startseite</span> #}
      {% for items in site.headerNav %}
      <a class="relative flex items-center text-sm font-semibold text-center cursor-pointer flex-nowrap hover:underline" href="{{items.link}}" aria-label="{{items.label}}">
      <span>{{items.label}}</span>
      <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7"></path></svg>
      </a>
      {% endfor %}

      <span class="">|</span>

      <a href="/projekte" class="relative flex items-center text-sm font-semibold text-center cursor-pointer hover:underline hover:text-amber-700">
      <span>Arbeitsproben</span>
      <span class="ml-1">»</span>
      </a>
    </nav>

    <!-- Kontakt CTA for Tablet-->
    <a href="#kontakt" class="inline-block px-4 py-2 text-xs font-semibold leading-none transition-all border-2 rounded-md cursor-pointer whitespace-nowrap md:block lg:hidden border-amber-400 hover:text-amber-200 focus:text-amber-200 hover:bg-amber-700 focus:bg-amber-700 ">Kontakt</a>
      
    <!-- Kontakt CTA for Desktop-->
    <a href="#kontakt" class="hidden px-4 py-2 text-xs font-semibold leading-none transition-all border-2 border-transparent rounded-md cursor-pointer whitespace-nowrap lg:block bg-amber-400 hover:text-amber-200 focus:text-amber-200 hover:bg-amber-700 focus:bg-amber-700">Kontakt</a>

    <!-- Menu Button for Mobile and Tablet Navigation -->
    <button class="flex items-center px-4 py-1 text-xs font-semibold rounded-full shadow-sm md:py-2 bg-amber-400 md:rounded-md hover:text-amber-200 focus:text-amber-200 hover:bg-amber-700 focus:bg-amber-700 lg:hidden"   aria-label="Menü öffnen" x-on:click="mobileMenuVisible = !mobileMenuVisible">
      <span class="sr-only">Menü öffnen</span>

        <!-- Heroicon name: outline/menu -->
        <svg class="w-6 h-6 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>

      <span class="hidden ml-1 md:block">Menu</span>
    </button>

  </div>
  
  <!-- Mobile Navigation
  =========================================================================== -->
  <div class="absolute z-50 mx-auto lg:hidden inset-4 "
  x-show="mobileMenuVisible" x-on:click="mobileMenuVisible = ! mobileMenuVisible" x-cloak>

     <!-- Overlay background and button to close menu on mobile -->
    <button class="fixed inset-0 z-10 w-screen h-screen transition bg-gray-900"
    aria-label="Menü schließen"
    x-bind:class="mobileMenuVisible ? 'opacity-90 pointer-events-auto' : 'opacity-0 pointer-events-none'"
    type="button" >
    </button>

    <!-- Mobile Nav Card Container
    ==================================== -->
    <div class="relative z-20 px-4 pt-0 pb-8 transition-all origin-bottom bg-white rounded-lg shadow-lg" x-bind:class="mobileMenuVisible ? ' translate-y-0 scale-100 ' : 'translate-y-full scale-95 md:-translate-y-full'">

      <!-- Nav Header: logo + X
      ==================================== -->
      <div class="sticky top-0 flex items-center justify-between h-24 pt-4 pb-2 bg-white border-b border-gray-100 bg-opacity-95">
    
        <!-- Page Logo
        ==================================== -->
        <a href="/" class="h-full px-6 py-3 md:px-12" aria-label="Startseite">
          <img src="/assets/meta/logo-virnich-schreinerei.svg" class="h-full" width="140" height="48" alt="Logo {{company.name}}"/>
        </a>

        <!-- Close Button
        ==================================== -->
        <svg class="w-auto h-full p-4 md:px-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>

      </div>

      <!-- Primary Menu Mobile
      ==================================== -->
      <nav class="grid grid-cols-1 gap-2 px-4 mt-4 text-base font-semibold md:px-8 md:grid-cols-2 md:gap-y-2">
        <span class="font-black md:col-span-2 text-amber-800">Startseite:</span> 

        {% for items in site.headerNav %}
        <a class="flex items-center px-4 py-3 leading-none rounded-md mobile-nav-items focus:bg-amber-700 hover:bg-amber-700" href="{{items.link}}" aria-label="{{items.label}}">{{items.label}}</a>
        {% endfor %}
        
      </nav>
      
      
      <!-- Secondary Menu Mobile
      ==================================== -->
      <div class="mt-4">
        <ul  class="grid grid-cols-1 gap-2 p-4 text-base font-semibold text-left border-t border-dashed md:grid-cols-2 md:px-8">
                <span class="font-black md:col-span-2 text-amber-800">Navigation:</span> 

          {% for items in site.footerNav %}
          <li>
            <a href="{{items.link}}" aria-label="{{items.label}}" class="flex items-center px-2 py-1">          
              <span>{{items.label}}</span>
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact Menu Mobile
      ==================================== -->
      <a href="#kontakt" class="block px-3 py-3 mx-4 my-4 text-xs font-semibold leading-none text-center transition-all border-2 border-transparent rounded-md cursor-pointer whitespace-nowrap bg-amber-400 hover:text-amber-200 focus:text-amber-200 hover:bg-amber-700 focus:bg-amber-700" >Kontakt »</a>   

    </div>

  </div>

</header>