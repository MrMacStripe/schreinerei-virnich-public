<footer class="bg-brown-100">

  <div class="grid items-center grid-cols-1 gap-6 px-4 py-12 mx-auto max-w-default md:grid-cols-3">

    <!-- Left column -->
    <div class="md:col-span-2">
      <a href="/#hero" aria-label="Startseite">
        <img class="w-1/3" width="231" height="80" src="/assets/meta/logo-virnich-schreinerei.svg" alt="Logo {{site.companyName}}"/>
      </a>
      <p class="mt-6 max-w-prose">{{site.companyDescription}}</p>
    </div>

    <!-- Right Column -->
    <div>{% include "src/_includes/components/contact-information.njk" %}</div>

  </div>

  <!-- Secondary Navigation -->
  <div class="py-8 bg-brown-900">
    <nav class="px-4 mx-auto max-w-default">
      <!-- Nav Menu -->
      <ul class="flex flex-wrap justify-center text-xs font-medium text-center text-amber-100">
      
      {% set collection = site.footerNav %}
      {% for item in collection %}
        <li class="px-4 my-2 cursor-pointer hover:underline">
          <a href="{{item.link}}" aria-label="{{item.label}}">{{item.label}}
            <!-- Heroicon: Double Chevron Right -->

            <svg class="inline-block w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 15.707a1 1 0 010-1.414L14.586 10l-4.293-4.293a1 1 0 111.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path><path fill-rule="evenodd" d="M4.293 15.707a1 1 0 010-1.414L8.586 10 4.293 5.707a1 1 0 011.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
    <p class="mx-auto mt-8 text-xs font-medium text-center opacity-50 text-brown-100">
    Â© {{ helpers.currentYear() }} by {{site.name}} 
    </p>
  </div>

</footer>