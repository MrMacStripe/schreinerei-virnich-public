<footer class="bg-brown-100">

  <div class="grid items-center grid-cols-1 gap-6 px-4 py-12 mx-auto max-w-default md:grid-cols-3">

    <!-- Left column -->
    <div class="md:col-span-2">
      <a href="/#hero" aria-label="Startseite">
        <img class="w-1/3" width="231" height="80" src="/assets/meta/logo-virnich-schreinerei.svg" alt="Logo {{site.companyName}}"/>
      </a>
      <p class="mt-6 max-w-prose">{{site.companyDescription}}</p>
    </div>

    <!-- Right Column -->
    <div>
<div class="py-2 pl-4 space-y-6 font-semibold border-l-2 border-amber-900">

  <div class="flex items-center">
    <!-- Heroicon: phone-outgoing -->
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path
        d="M17.924 2.617a.997.997 0 00-.215-.322l-.004-.004A.997.997 0 0017 2h-4a1 1 0 100 2h1.586l-3.293 3.293a1 1 0 001.414 1.414L16 5.414V7a1 1 0 102 0V3a.997.997 0 00-.076-.383z" />
      <path
        d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
    </svg>
    <a class="md:hidden" href="tel:{{site.companyPhone}}">{{site.companyPhone}} »</a>
    <p class="hidden md:block">{{site.companyPhone}}</p>

  </div>
 <div class="flex items-center" v-if="site.companyFax">
    <!-- Heroicon: printer -->
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd"
        d="M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zm0 8H7v4h6v-4z"
        clip-rule="evenodd" />
    </svg>

    <span>{{site.companyFax}}</span>
  </div> 

 

  <div class="flex items-start justify-start flex-nowrap">
    <!-- Heroicon: location-marker -->
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd"
        d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
        clip-rule="evenodd" />
    </svg>
    <a href="https://goo.gl/maps/3Jtx4sRCJE1urbzq8" target="_blank" rel="noreferrer" class="flex-1 hover:underline">
      {{site.companyStreet}}, {{site.companyZip}} {{site.companyCity}} »
    </a>
  </div>



</div>
    </div>

  </div>

  <!-- Secondary Navigation -->
  <div class="py-8 bg-brown-900">
    <nav class="px-4 mx-auto max-w-default">
      <!-- Nav Menu -->
      <ul class="flex flex-wrap justify-center text-xs font-medium text-center text-amber-100">
      
      {% set collection = site.footerNav %}
      {% for item in collection %}
        <li class="px-4 my-2 cursor-pointer hover:underline">
          <a href="{{item.link}}" aria-label="{{item.label}}">{{item.label}}
            <!-- Heroicon: Double Chevron Right -->

            <svg class="inline-block w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 15.707a1 1 0 010-1.414L14.586 10l-4.293-4.293a1 1 0 111.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path><path fill-rule="evenodd" d="M4.293 15.707a1 1 0 010-1.414L8.586 10 4.293 5.707a1 1 0 011.414-1.414l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
    <p class="mx-auto mt-8 text-xs font-medium text-center opacity-75 text-brown-100">
    © {{ helpers.currentYear() }} by {{site.name}} 
    </p>
  </div>

</footer>