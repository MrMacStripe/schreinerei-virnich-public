<section id="hero" class="relative overflow-x-hidden ">

  {# ================================================================ #}
  {# Background Color and pattern =================================== #}
  <div class="absolute inset-0 md:grid w-full h-full md:grid-cols-5 -z-1 border-b-[3px] border-amber-900">
    <div class="w-full h-full col-span-1 bg-opacity-50 md:col-span-3 bg-brown-100 bg-pattern-grid--dark"></div>
    <div class="hidden w-full h-full md:block md:col-span-2 bg-brown-900"></div>
  </div>

  <div class="relative z-0 grid items-center max-w-screen-xl grid-cols-1 px-4 pt-8 mx-auto place-items-center gap-y-16 gap-x-10 md:py-8 md:grid-cols-2 lg:pt-20 lg:pb-24">

    <!-- Left column -->
    <div class="w-full max-w-screen-md md:py-16">

        <h1 class="text-2xl font-black lg:text-4xl text-amber-900">{{site.companyName}}</h1>
        <h2 class="text-xl font-medium opacity-80">{{site.companyMotto}}</h2>
        <p class="mt-8 text-lg font-medium">{{site.companyDescription}}</p>
        
        <div class="hidden mt-12 md:block">

          <div class="py-2 pl-4 space-y-6 font-semibold border-l-2 border-amber-900">

            <div class="flex items-center">
              <!-- Heroicon: phone-outgoing -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path
                  d="M17.924 2.617a.997.997 0 00-.215-.322l-.004-.004A.997.997 0 0017 2h-4a1 1 0 100 2h1.586l-3.293 3.293a1 1 0 001.414 1.414L16 5.414V7a1 1 0 102 0V3a.997.997 0 00-.076-.383z" />
                <path
                  d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
              <a class="md:hidden" href="tel:{{site.companyPhone}}">{{site.companyPhone}} »</a>
              <p class="hidden md:block">{{site.companyPhone}}</p>

            </div>

            <div class="flex items-start justify-start flex-nowrap">
              <!-- Heroicon: location-marker -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                  clip-rule="evenodd" />
              </svg>
              <a href="https://goo.gl/maps/3Jtx4sRCJE1urbzq8" target="_blank" rel="noreferrer" class="flex-1 hover:underline">
                {{site.companyStreet}}, {{site.companyZip}} {{site.companyCity}} »
              </a>
            </div>

            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
              <a class="flex items-center hover:underline flex-nowrap" href="#kontakt">
                <span>Kontakt per E-Mail</span>  
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7"></path></svg>
              </a>
            </div>

          </div>

        </div>

    </div>

    <!-- Right Column -->
    <div class="relative pb-8 -mx-2 h-96 md:mx-auto md:p-0 md:w-full md:h-full">
  
      <div class="relative grid w-full h-full grid-cols-3 grid-rows-2 gap-1 md:-mr-8 md:max-h-full md:absolute md:h-full md:grid-cols-7 md:grid-rows-3 md:gap-3 xl:-mr-24 2xl:-mr-48">        

        {% picture homeHero.image1, "object-cover w-full h-full md:col-span-3 md:row-span-2 rounded-tl-lg md:rounded-lg", homeHero.desc1, "(min-width:768px)480px, 40vw", "eager" %}     

        {% picture homeHero.image2, "object-cover w-full h-full md:col-span-2 md:row-span-3 md:rounded-lg", homeHero.desc2, "(min-width:768px)480px, 40vw", "eager" %}     

        {% picture homeHero.image3, "md:col-span-2 md:row-span-1  object-cover w-full h-full rounded-tr-lg md:rounded-lg", homeHero.desc3, "(min-width:768px)320px, 40vw", "eager" %}     

        {% picture homeHero.image4, "md:col-span-2 md:row-span-1 object-cover w-full h-full  rounded-bl-lg md:rounded-lg", homeHero.desc4, "(min-width:768px)320px, 40vw", "eager" %}     

        {% picture homeHero.image5, "object-cover w-full h-full md:col-span-3 md:row-span-1  md:rounded-lg", homeHero.desc5, "(min-width:768px)320px, 40vw", "eager" %}     

        {% picture homeHero.image6, "object-cover w-full h-full md:col-span-2 md:row-span-1 rounded-br-lg md:rounded-lg", homeHero.desc6, "(min-width:768px)320px, 40vw", "eager" %}  


      </div>

    </div>

            <div class="pb-12 -mt-8 md:hidden">

          <div class="py-2 pl-4 space-y-6 font-semibold border-l-2 border-amber-900">

            <div class="flex items-center">
              <!-- Heroicon: phone-outgoing -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path
                  d="M17.924 2.617a.997.997 0 00-.215-.322l-.004-.004A.997.997 0 0017 2h-4a1 1 0 100 2h1.586l-3.293 3.293a1 1 0 001.414 1.414L16 5.414V7a1 1 0 102 0V3a.997.997 0 00-.076-.383z" />
                <path
                  d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
              <a class="md:hidden" href="tel:{{site.companyPhone}}">{{site.companyPhone}} »</a>
              <p class="hidden md:block">{{site.companyPhone}}</p>

            </div>

            <div class="flex items-start justify-start flex-nowrap">
              <!-- Heroicon: location-marker -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                  clip-rule="evenodd" />
              </svg>
              <a href="https://goo.gl/maps/3Jtx4sRCJE1urbzq8" target="_blank" rel="noreferrer" class="flex-1 hover:underline">
                {{site.companyStreet}}, {{site.companyZip}} {{site.companyCity}} »
              </a>
            </div>

            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
              <a class="flex items-center hover:underline flex-nowrap" href="#kontakt">
                <span>Kontakt per E-Mail</span>  
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7"></path></svg>
              </a>
            </div>

          </div>

        </div>
  </div>


</section>
